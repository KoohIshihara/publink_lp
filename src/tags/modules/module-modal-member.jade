module-modal-member
  div.wrap-module.px20.py40
    div.module-content.f.fc.mb20
      //item-member(content='{content}')
      div.member-item
        div.wrap-img.f.fh.mb12
          img(src='{opts.content.src}')
        div.wrap-profile.mb20
          p.role.mb4 {opts.content.role}
          p.name {opts.content.name}
    div.wrap-text
      p {content.profile}
  div.wrap-icon.f.fh
    img(onclick='{closeModalWindow}' src='./img/icons/close.svg')

  style(scoped, type='less').
    :scope {
      position: relative;
      display: block;
      border-radius: 6px;
      background: #FFF;
      .wrap-module {
        display: block;
        width: 90%;
        max-width: 560px;
        margin: 0 auto;
        .module-content {
          .member-item {
            .wrap-img {
              width: 100%;
              img {
                width: 70%;
                border-radius: 50%;
              }
            }
            .wrap-profile {
              .role {
                font-size: 12px;
                color: #999;
                text-align: center;
              }
              .name {
                font-size: 14px;
                color: #2a2a2a;
                text-align: center;
              }
            }
          }
        }
        .wrap-text {
          p {
            font-size: 14px;
          }
        }
      }
      .wrap-icon {
        position: absolute;
        left: 12px;
        top: 12px;
        width: 44px;
        height: 44px;
        img {
          cursor: pointer;
        }
      }
      @media only screen and (max-width : 600px) {
        .wrap-module {
          max-width: 340px;
        }
      }
    }

  script.

    var self = this;

    this.content = opts.content;

    this.on('mount', function(){

    });

    this.close = closeModalWindow;
